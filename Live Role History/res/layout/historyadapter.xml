<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_background_color" 
    android:padding="5dp">
    
    
    <ImageView
        android:id="@+id/historyadapter_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_launcher" >
    </ImageView>

    <TextView
        android:id="@+id/historyadapter_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/historyadapter_icon"
        android:text="@+id/label"
        android:textSize="20sp"
        android:textColor="@color/dialog_background_stroke_color"
        android:textStyle="bold"
        android:paddingLeft="5dp">
    </TextView>
    
    <TextView
        android:id="@+id/description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/historyadapter_icon"
        android:layout_below="@id/historyadapter_label"
        android:text="@+id/label"
        android:textSize="12sp"
        android:textColor="@color/dialog_background_stroke_color"
        android:paddingLeft="5dp" />
    
    
</RelativeLayout>